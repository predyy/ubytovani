generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id             String   @id @default(cuid())
  name           String
  slug           String   @unique
  plan           TenantPlan @default(FREE)
  defaultLocale  String
  enabledLocales String[]
  autoConfirmBookings Boolean @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  members        TenantMember[]
  properties     Property[]
  rooms          Room[]
  roomImages     RoomImage[]
  reservations   Reservation[]
  availabilityBlocks AvailabilityBlock[]
  siteConfigs    SitePageConfig[]
  emailTemplates EmailTemplate[]
  assets         Asset[]
  staticDocs     StaticDoc[]
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  passwordHash String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  refreshTokens RefreshToken[]
  memberships   TenantMember[]
  assets        Asset[]
  staticDocs    StaticDoc[]
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model TenantMember {
  id        String     @id @default(cuid())
  tenantId  String
  userId    String
  role      TenantRole @default(OWNER)
  createdAt DateTime   @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([userId])
}

model Property {
  id           String   @id @default(cuid())
  tenantId     String
  propertyType String
  roomCount    Int
  maxGuests    Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  rooms  Room[]
  reservations Reservation[]
  availabilityBlocks AvailabilityBlock[]

  @@index([tenantId])
}

model Room {
  id          String   @id @default(cuid())
  tenantId    String
  propertyId  String
  name        String
  slug        String?
  description String
  amenities   String[]
  maxGuests   Int?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  images   RoomImage[]
  reservations Reservation[]
  availabilityBlocks AvailabilityBlock[]

  @@unique([tenantId, slug])
  @@index([tenantId, propertyId])
}

model RoomImage {
  id        String   @id @default(cuid())
  tenantId  String
  roomId    String
  assetId   String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)
  asset  Asset  @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@unique([roomId, assetId])
  @@index([tenantId, roomId])
}

model Reservation {
  id           String   @id @default(cuid())
  tenantId     String
  propertyId   String
  roomId       String?
  guestName    String
  guestEmail   String
  guestPhone   String?
  guestCount   Int?
  message      String?
  checkInDate  DateTime @db.Date
  checkOutDate DateTime @db.Date
  status       ReservationStatus @default(PENDING)
  source       ReservationSource @default(DIRECT)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  room     Room?    @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([tenantId, propertyId, roomId, checkInDate, checkOutDate])
  @@index([status])
}

model AvailabilityBlock {
  id         String   @id @default(cuid())
  tenantId   String
  propertyId String
  roomId     String?
  startDate  DateTime @db.Date
  endDate    DateTime @db.Date
  reason     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  room     Room?    @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([tenantId, propertyId, roomId, startDate, endDate])
}

model SitePageConfig {
  id        String           @id @default(cuid())
  tenantId  String
  locale    String
  status    SiteConfigStatus
  puckJson  Json
  publishedAt DateTime?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, locale, status])
  @@index([tenantId])
}

model EmailTemplate {
  id        String            @id @default(cuid())
  tenantId  String?
  type      EmailTemplateType
  locale    String
  subject   String
  htmlBody  String
  enabled   Boolean           @default(true)
  fromName  String?
  replyTo   String?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  tenant Tenant? @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, type, locale])
  @@index([tenantId])
}

model Asset {
  id              String   @id @default(cuid())
  tenantId        String
  key             String
  url             String
  mimeType        String
  sizeBytes       Int
  originalName    String
  createdByUserId String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tenant    Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdBy User   @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)
  roomImages RoomImage[]

  @@index([tenantId])
  @@index([createdByUserId])
}

model StaticDoc {
  id              String   @id @default(cuid())
  tenantId        String
  locale          String
  slug            String
  title           String
  s3Key           String
  mimeType        String
  sizeBytes       Int
  originalName    String
  createdByUserId String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tenant    Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdBy User   @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@unique([tenantId, locale, slug])
  @@index([tenantId])
}

enum TenantPlan {
  FREE
  PAID
}

enum TenantRole {
  OWNER
  ADMIN
  STAFF
}

enum SiteConfigStatus {
  DRAFT
  PUBLISHED
}

enum EmailTemplateType {
  BOOKING_REQUEST_GUEST
  BOOKING_REQUEST_HOST
  BOOKING_CONFIRMED_GUEST
  BOOKING_CONFIRMED_HOST
  BOOKING_CANCELLED_GUEST
  BOOKING_CANCELLED_HOST
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum ReservationSource {
  DIRECT
}
